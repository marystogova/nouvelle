---
title: Веб-стандарты
layout: page.njk
permalink: index.html
---

{% include 'header.njk' %}

<main class="articles--main">
    {{ content | safe }}

    <ul class="articles__list">
        {%- for article in collections.article | reverse -%}
            {% if loop.index0 < 5 %}
                <li class="articles__item{{ "--main" if loop.index0 == 0 }}">
                    <article class="articles">
                        <div class="articles__author">
                            <img class="articles__author-img" src="/images/author--blue.png"
                                 height="104" width="113" alt="{{ article.data.source.author }}">
                        </div>
                        <div class="articles__info">
                            <div class="articles__main">
                                <h2 class="articles__title">
                                    <a href="{{ article.url }}">{{ article.data.title }}</a>
                                </h2>
                                {% if loop.index0 == 0 %}
                                    <p class="articles__description">{{ article.data.description }}</p>
                                {%- endif -%}
                            </div>
                            <p class="articles__meta">
                                <time class="articles__date" datetime="{{ article.date }}">4 февраля</time>
                                <span class="articles__author-name">{{ article.data.source.author }}</span>
                            </p>
                        </div>
                    </article>
                </li>
                {% if loop.index0 == 1 %}
                    <li aria-hidden="true" class="articles__item-decor"></li>
                {%- endif -%}
            {%- endif -%}
        {%- endfor -%}
    </ul>
    <p class="articles__more">
        <a class="articles__link" href="/articles/">Все статьи</a>
    </p>
</main>

{% include 'aside.njk' %}
{% include 'footer.njk' %}
