---
title: Веб-стандарты
layout: page.njk
permalink: index.html
---

{% include 'header.njk' %}

<main class="articles--main">
    {{ content | safe }}

    <ul class="articles__list">
        {%- for article in collections.article | reverse -%}
            {% if loop.index0 < 5 %}
                <li class="articles__item{{ "--main" if loop.index0 == 0 }}">
                    {% set blobColor %}{{ ['teal', 'lightteal', 'moss', 'grass'] | random }}{% endset %}
                    {% set blobShape %}{{ [1, 2, 3, 4, 5, 6, 7] | random }}{% endset %}
                    <article class="articles">
                        <div class="articles__author">
                            {% for author in collections.people | filterPeople(article.data.author) %}
                                <img
                                    class="articles__author-img blob--{{ blobColor }} blob--shape-{{ blobShape }}"
                                    src="/images/author--placeholder.jpg"
                                    width="113" height="104"
                                    alt="{{ author.name }}">
                            {% endfor %}
                        </div>
                        <div class="articles__info">
                            <div class="articles__main">
                                <h2 class="articles__title">
                                    <a href="{{ article.url }}">{{ article.data.title }}</a>
                                </h2>
                                {% if loop.index0 == 0 %}
                                    <p class="articles__description">{{ article.data.description }}</p>
                                {%- endif -%}
                            </div>
                            <p class="articles__meta">
                                <time class="articles__date"
                                      datetime="{{ article.date | isoDate }}">{{ article.date | ruDate }}</time>
                                {% for author in collections.people | filterPeople(article.data.author) %}
                                    <span class="articles__author-name">{{ author.name }}</span>
                                {% endfor %}
                            </p>
                        </div>
                    </article>
                </li>
                {% if loop.index0 == 1 %}
                    <li aria-hidden="true" class="articles__item-decor"></li>
                {%- endif -%}
            {%- endif -%}
        {%- endfor -%}
    </ul>
    <p class="articles__more">
        <a class="articles__link" href="/articles/">Все статьи</a>
    </p>
</main>

{% include 'aside.njk' %}
{% include 'footer.njk' %}
